<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    tools:ignore="Overdraw">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/servicefeetitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/title"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/payapalimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startPayPal"
                android:paddingBottom="@dimen/abc_action_bar_content_inset_material"
                android:paddingTop="@dimen/abc_action_bar_content_inset_material"
                android:src="@drawable/paypal_logo" />

            <ImageView
                android:id="@+id/stripleimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startStripe"
                android:paddingBottom="@dimen/abc_action_bar_content_inset_material"
                android:paddingTop="@dimen/abc_action_bar_content_inset_material"
                android:src="@drawable/stripe_transparent_logo" />

            <ImageView
                android:id="@+id/squareview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="startSquare"
                android:paddingBottom="@dimen/abc_action_bar_content_inset_material"
                android:paddingTop="@dimen/abc_action_bar_content_inset_material"
                android:src="@drawable/square_logo_black" />

            <TextView
                android:text="@string/GetStarted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:fontFamily="sans-serif" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
